@model AuthApp.Data.Book

@{
    <form asp-action="Edit" asp-controller="Books" method="post" class="form">
        <input type="hidden" asp-for="Id" />
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title">Enter Title:</label>
                        <input asp-for="Title" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Title"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Author">Enter Author Name:</label>
                        <input asp-for="Author" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Author"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Year">Enter Year:</label>
                        <input asp-for="Year" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Year"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Isbn">Enter ISBN:</label>
                        <input asp-for="Isbn" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Isbn"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="submit" class="btn btn-danger" asp-controller="Books" asp-action="Delete">Delete Book</button>
                </div>
            </div>
        </div>
    </form>
}

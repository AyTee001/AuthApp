@model IEnumerable<AuthApp.Data.Book>

@{
    @foreach (var book in Model)
    {
        <div class="book-card">
            <h3>@book.Title</h3>
            <p>Id: @book.Id</p>
            <details>
                <summary>Show Details</summary>
                <div class="card card-body book-card-content">
                    <p>Author: @book.Author</p>
                    <p>Year: @book.Year</p>
                    <p>ISBN: @book.Isbn</p>
                </div>
            </details>
            <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id">Edit Book</a>
        </div>
    }

}
